<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/abc_select_dialog_padding_start_material"
            android:text="Um den Stundenplan per NFC zu teilen, muss NFC und Android Beam eingeschaltet sein."
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Zum Teilen müssen nur die beiden Geräte mit der Rückseite gegeneinander gehalten werden. Nach der Vibration muss der Teilende mit einem Klick auf den Bildschirm die Übertragung bestätigen."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="@dimen/abc_select_dialog_padding_start_material"
            android:paddingRight="@dimen/abc_select_dialog_padding_start_material" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:src="@drawable/ic_phone_higher_angle" />
    </LinearLayout>
</ScrollView>