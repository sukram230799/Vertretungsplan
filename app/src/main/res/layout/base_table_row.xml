<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@color/planForeground">

    <!--<CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:checked="false"
        android:visibility="visible" />-->
    <FrameLayout
        android:id="@+id/checkBoxContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:checked="false"
        android:visibility="visible" />

    <TextView
        android:id="@+id/spTextHour"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/checkBoxContainer"
        android:layout_toRightOf="@+id/checkBoxContainer"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <!-- Because of the checkbox: No need for paddingLeft -->

    <TextView
        android:id="@+id/spTextTeacher"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/spTextHour"
        android:layout_toRightOf="@+id/spTextHour"
        android:gravity="center_vertical"
        android:text="BOB"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/spTextSubject"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/spTextTeacher"
        android:layout_toRightOf="@+id/spTextTeacher"
        android:gravity="center_vertical"
        android:text="CH"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/spTextRoom"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/spTextRepeatType"
        android:layout_toStartOf="@+id/spTextRepeatType"
        android:gravity="center_vertical|right"
        android:text="A301"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/spTextRepeatType"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|right"
        android:paddingRight="25dp"
        android:password="false"
        android:text="G151"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/spTextBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|right"
        android:text="PAUSE"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!--<ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:alpha=".53"
        android:src="@drawable/ic_help_black_18dp"
        android:visibility="gone" />-->
</RelativeLayout>